<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="HelloWorld" class="pl.tjeZad1.zad2.component.HelloWorld">
        <property name="content" value="HelloWorldBean"/>
        <property name="goodByeWorld" ref="GoodByeWorld"/>
    </bean>

    <bean id="GoodByeWorld" class="pl.tjeZad1.zad2.component.GoodByeWorld">
        <constructor-arg value="GoodByeWorldBean"/>
    </bean>

</beans>